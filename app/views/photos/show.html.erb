<h1>Photos#show</h1>
<p>Find me in app/views/photos/show.html.erb</p>
<%= image_tag @photo.image.url(:medium) %>

<% if @photo.comments.any? %>
  <% @photo.comments.each do |c| %>
    <hr> <%= c.content %> <hr>
  <% end %>
<% end %>


<%= form_for @comment = Comment.new do |f| %>
<%= f.text_area :content %>
<%= f.hidden_field :photo_id, :value => @photo.id %>
<%= f.submit "Сохранить" %>
<% end %>
